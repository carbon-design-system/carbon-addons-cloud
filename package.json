{
  "name": "carbon-addons-cloud",
  "license": "Apache-2",
  "files": [
    "css",
    "scss"
  ],
  "scripts": {
    "build": "gulp build",
    "ci-check": "yarn format:diff && yarn test --runInBand",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "develop": "gulp develop",
    "format": "prettier --write \"**/*.{scss,css,js,md,ts}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,ts}\"",
    "precommit": "lint-staged",
    "prepare": "yarn build",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "peerDependencies": {
    "carbon-components": "^8.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@frctl/fractal": "^1.1.7",
    "autoprefixer": "^8.5.2",
    "carbon-components": "^9.0.0",
    "carbon-icons": "^6.3.2",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.3",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.2",
    "node-sass": "^4.9.0",
    "prettier": "^1.13.3",
    "semantic-release": "^15.5.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{scss,css,js,md}": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
