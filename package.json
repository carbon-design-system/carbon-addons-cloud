{
  "name": "carbon-addons-cloud",
  "version": "0.1.0",
  "main": "lib/index.js",
  "license": "Apache-2",
  "files": [
    "lib",
    "scss"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:js && yarn build:scss",
    "build:js": "babel -q -d lib --ignore \"__tests__,__mocks__,*-story.js,*-test.js\" src",
    "build:scss": "cpx src/**/*.scss scss",
    "build:storybook": "build-storybook",
    "ci-check": "yarn test --runInBand",
    "clean": "rimraf lib scss",
    "commitmsg": "validate-commit-msg",
    "prettier": "prettier --write \"**/*.{js,css,scss}\"",
    "precommit": "lint-staged",
    "prepublish": "yarn build",
    "semantic-release": "semantic-release",
    "start": "yarn storybook",
    "storybook": "start-storybook -p 3000",
    "test": "jest"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "window-or-global": "^1.0.1"
  },
  "peerDependencies": {
    "carbon-components": "^8.11.1",
    "carbon-components-react": "^5.19.0",
    "carbon-icons": "^5.1.2 || ^6.2.0",
    "react": "^15.3.2 || ^16.1.0",
    "react-dom": "^15.3.2 || ^16.1.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.15",
    "@storybook/addon-info": "^3.2.14",
    "@storybook/addon-links": "^3.2.15",
    "@storybook/addons": "^3.2.14",
    "@storybook/react": "^3.2.14",
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "carbon-components": "^8.11.1",
    "carbon-components-react": "^5.19.0",
    "carbon-icons": "^7.0.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "node-sass": "^4.7.2",
    "object-assign": "^4.1.1",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.10.0",
    "promise": "^8.0.1",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "semantic-release": "^15.0.1",
    "storybook-addon-a11y": "^3.1.9",
    "style-loader": "^0.20.2",
    "validate-commit-msg": "^2.14.0",
    "whatwg-fetch": "^2.0.3"
  },
  "release": {
    "branch": "master"
  },
  "babel": {
    "presets": [
      "env",
      "stage-1",
      "react",
      "flow"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "components/**/*.js"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js?(x)",
      "<rootDir>/**/?(*-)(spec|test).js?(x)"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/config/jest/jsTransform.js",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "testPathIgnorePatterns": [
      "/config/",
      "/lib/"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
